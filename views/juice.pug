extends layout

block content
  h1 Sathvik Reddy Cheruku

  .container-fluid
    .row
     -let items = results;
      each item,index in items
       div.col-sm-2
            h3 Juice 
            p #{item.Juice_name}, #{item.Juice_color},#{item.Juice_cost}
            a(href="http://localhost:3001/" onclick=`buy(${index}); return false;`) Buy Juice #{index}
  

  script.
     function buy(variable) {
      alert(`You purchased item ${variable+1}`);
     }